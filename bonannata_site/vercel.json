{
    "version": 2,
    "builds": [
        {
            "src": "bonannata_site/wsgi.py",
            "use": "@vercel/python",
            "config": { "maxLambdaSize": "50mb", "runtime": "python3.12" }
        }
    ],
    "routes": [
        { "src": "/static/(.*)", "dest": "/bonannata_site/static_collected/$1", "headers": { "cache-control": "public, max-age=31536000, immutable" } },
        { "src": "/favicon.ico", "dest": "/bonannata_site/static_collected/favicon.ico" },
        { "src": "/(.*)", "dest": "bonannata_site/wsgi.py" }
    ]
}